<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.css" rel="stylesheet" type="text/css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
<div class="col-md-8 m-auto">
   <div class="card card-1-color p-4">
      <nav class="bg-trans">
         <h1 class="pl-1">New Tenant</h1>
      </nav>
      <%= simple_form_for(@tenant) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
         <div class="form-group">
            <label>Company Name</label>
            <%= f.text_field :company_name, class: "form-control text-white" %>
         </div>
         <div class="form-group">
            <label>Notes</label>
            <%= f.text_field :notes, class: "form-control  text-white" %>
         </div>
         <div class="form-group">
            <label>Lease is Up At</label>
            <%= f.date_field :lease_up, class: 'datepicker form-control' %>
         </div>
         <div class="form-group">
            <label>Size of space</label>
            <%= f.text_field :space_size, class: 'form-control text-white' %>
         </div>
          <div class="form-group">
            <label>Price SF</label>
            <%= f.text_field :price, class: 'form-control text-white' %>
         </div>
          <div class="form-group">
            <label>Full address</label>
            <%= f.text_field :fulladress, class: 'form-control text-white' %>
         </div>
      </div>
      <div class=" ">
         <div class="form-group">
            <input class="form-control get-contacts  mt-0 pt-0  text-white" type="text" placeholder="Find Contacts" aria-label="Search" id="search-contat-task">
         </div>
         <a class="" data-toggle="collapse" href="#collapseContacts-add" aria-expanded="false" aria-controls="collapseContacts-add">
         <i class="material-icons text-muted float-right ">keyboard_arrow_down</i></a>
         <div class="collapse" id="collapseContacts-add">
            <div class="card card-body">
               <div class="card-body" id="form-contact">
                  <ul class="list-inline p-3">
                     <li class="list-inline-item m-2">
                        <div class="form-check mr-3 pr-3">
                           <label class="form-check-label">
                           <input type="checkbox" name="contact_ids[]" value="" checked="true" class="contact1 c-ids">
                           <span class="c1  mt-4 p-2  text-center">contact 1</span>
                           <span class="form-check-sign">
                           <span class="check"></span>
                           </span>
                           </label>
                        </div>
                     </li>
                     <li class="list-inline-item  m-2">
                        <div class="form-check mr-3 pr-3">
                           <label class="form-check-label">
                           <input type="checkbox" name="contact_ids[]" value="" checked="true" class="contact2  c-ids">
                           <span class="c2 mt-4 p-2  text-center">contact 2 </span>
                           <span class="form-check-sign">
                           <span class="check"></span>
                           </span>
                           </label>
                        </div>
                     </li>
                     <li class="list-inline-item  m-2">
                        <div class="form-check mr-3 pr-3">
                           <label class="form-check-label">
                           <input type="checkbox" name="contact_ids[]" value="" checked="true" class="contact3  c-ids">
                           <span class="c3 mt-4 p-2 text-center"> contact 3 </span>
                           <span class="form-check-sign">
                           <span class="check"></span>
                           </span>
                           </label>
                        </div>
                     </li>
                     <li class="list-inline-item  m-2">
                        <div class="form-check mr-3 pr-3">
                           <label class="form-check-label">
                           <input type="checkbox" name="contact_ids[]" value="" checked="true" class="contact4  c-ids">
                           <span class="c4 mt-4 p-2 text-muted text-center">contact 4</span>
                           <span class="form-check-sign">
                           <span class="check"></span>
                           </span>
                           </label>
                        </div>
                     </li>
                     <li class="list-inline-item  m-2">
                        <div class="form-check mr-3 pr-3">
                           <label class="form-check-label">
                           <input type="checkbox" name="contact_ids[]" value="" checked="true" class="contact5  c-ids">
                           <span class="c5 mt-4 p-2  text-center"> contact 5 </span>
                           <span class="form-check-sign">
                           <span class="check"></span>
                           </span>
                           </label>
                        </div>
                     </li>
                  </ul>
               </div>
            </div>
         </div>
      </div>
      <div class="form-actions">
         <%= f.button :submit, class: "btn btn-outline-info" %>
      </div>
      <% end %>
   </div>
   <%= link_to 'Back', tenants_path, class: "mt-3 " %>
</div>
<script>
   $('.datepicker').datepicker({
    format: 'mm/dd/yyyy',
    startDate: '-3d'
});
</script>
