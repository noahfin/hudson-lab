<div class="modal-dialog modal-login" role="document">
                     <div class="modal-content">
                        <div class="card card-signup bg-black">
                           <div class="modal-header ">
                              <div class="card-header p-0 card-1 ">
                                <div class="div-header card-1   p-4">


                                   <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="material-icons">clear</i></button>

                                 <div class="social-line text-center card-1 pl-4">
                                    <a href="#first-company-tab" class="btn btn-just-icon btn-link nav-company-tabs" >
                                    <i class="fa fa-address-card text-danger text-center"></i>
                                    </a>
                                    <a href="#second-company-tab" class="btn btn-just-icon btn-link nav-company-tabs">
                                    <i class="fa fa-list-alt text-info text-center"></i>
                                    </a>
                                    <a href="#last-compnay-tab" class="btn btn-just-icon btn-link nav-company-tabs">
                                     <i class=" fa fa-image text-warning text-center"></i>
                                    </a>
                                 </div>
                                  </div>
                              </div>
                           </div>

                           <!-- addres earnings rent  age image  -->
                           <div class="modal-body">
                              <%= form_for(@company, :format=> :js, multipart: true, remote: local_assigns[:ajax_true], :authenticity_token => true, id: 'company-form') do |form| %>
                              <p class="description text-center">Company form</p>
                              <div class="card-body">
                                <div id="first-company-tab">
                                 <div class="form-group bmd-form-group">
                                    <div class="input-group">
                                       <span class="input-group-addon">
                                       <i class="fa fa-user-circle"></i>
                                       </span>
                                        <%= form.text_field :name, id: :company_name, class: 'form-control text-white', placeholder: 'Name...' %>
                                    </div>
                                 </div>
                                 <div class="form-group bmd-form-group">
                                    <div class="input-group">
                                       <span class="input-group-addon">
                                       <i class="fa fa-address-card"></i>
                                       </span>
                                      <%= form.text_field :addres, id: :company_addres, class: 'form-control text-white', placeholder: 'Addres...' %>
                                    </div>
                                 </div>
                                 <div class="form-group bmd-form-group">
                                    <div class="input-group">
                                       <span class="input-group-addon">
                                       <i class="fa fa-universal-access "></i>
                                       </span>
                                        <%= form.text_field :sector, id: :company_sector, class: 'form-control text-white', placeholder: 'Sector...' %>
                                    </div>
                                 </div>
                              </div>
                              <!--   second section   -->
                                <div id="second-company-tab" style="display: none;">
                                   <div class="form-group bmd-form-group">
                                    <div class="input-group">
                                       <span class="input-group-addon">
                                       <i class="fa fa-user-circle"></i>
                                       </span>
                                      <%= form.text_field :rent, id: :company_earnings, class: 'form-control text-white', placeholder: 'Rent...' %>
                                    </div>
                                 </div>
                                 <div class="form-group bmd-form-group">
                                    <div class="input-group">
                                       <span class="input-group-addon">
                                       <i class="fa fa-address-card"></i>
                                       </span>
                                        <%= form.text_field :earnings, id: :company_earnings, class: 'form-control text-white', placeholder: 'Earnings...' %>
                                    </div>
                                 </div>
                                 <div class="form-group bmd-form-group">
                                    <div class="input-group">
                                       <span class="input-group-addon">
                                       <i class="fa fa-universal-access "></i>
                                       </span>
                                        <%= form.text_field :age, id: :company_age, class: 'form-control text-white', placeholder: 'Age...' %>
                                    </div>
                                 </div>
                                </div>
                              <div id="last-compnay-tab" style="display: none;"><!--  last-compnay-tab -->
                              <div class="row">
                                <div class="form-group">
                                   <div class="row mt-3">
                                      <div class=" col-md-12">
                                         <div class="input-group ">
                                            <div class="col-xl-12">
                                               <div class="row ">
                                                  <div class="col-sm-4 ml-auto mr-auto">
                                                     <div class="fileinput fileinput-new" data-provides="fileinput">
                                                        <div class="fileinput-new thumbnail" style="max-width: 150px; max-height: 150px;"><%= image_tag @company.avatar.present? ? @company.avatar.url(:thumb) : 'placholder.png', class: "media-object" %>
                                                        </div>
                                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"><%= image_tag @company.avatar.present? ? @company.avatar.url(:thumb) : 'placholder.png', class: "media-object" %>
                                                        </div>
                                                        <div class="text-center">
                                                           <span class="btn btn-default btn-file">
                                                           <span class="fileinput-new text-white">Choose Photo</span>
                                                           <span class="fileinput-exists text-white">Change</span><%= form.file_field :avatar %>
                                                           </span>
                                                           <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                                        </div>
                                                     </div>
                                                  </div>
                                               </div>
                                            </div>
                                         </div>
                                      </div>
                                   </div>
                                   <div>
                                   </div>
                                </div>
                             </div>
                                 </div>
                              </div>

                           </div>
                           <div class="modal-footer justify-content-center">
                            <%= form.submit "save", class: "btn btn-info btn-link btn-wd btn-lg", id: "s-company" %>
                           </div>
                            <% end %>
                        </div>
                     </div>
                  </div>
