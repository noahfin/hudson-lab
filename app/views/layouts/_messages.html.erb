<%# Rails flash messages styled for Bootstrap 4.0 %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>

<script>
  $(function() {
    $.notify({
  title: '<strong>Heads up!</strong>',
  message: '<%= msg.to_s %>'
},{
  type: '<%= name.to_s %>'
});
});

</script>

  <% end %>
<% end %>






