       <div class="container-fluid">
          <div class="row">
            <div class="col-md-8">
              <div class="card card-5" >
                <div class="card-header card-header-icon ">
                  <div class="card-icon bg-hudson ">
                    <i class="material-icons">perm_identity</i>
                  </div>
                  <h4 class="card-title text-light">Edit Profile -
                    <small class="category text-light">Complete contact profile</small>
                  </h4>
                </div>
                <div class="card-body">
                  <%= form_with model: @contact,  :format=> :js, multipart: true, remote: local_assigns[:ajax_true], :authenticity_token => true, id: "contact_form"  do |form|%>

                    <div class="row">
                      <div class="col-md-5">
                        <div class="form-group">
                          <label class="bmd-label-floating">Company (disabled)</label>
                          <%= form.text_field :company, id: :contact_company, class: 'form-control text-light'%>
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Role</label>
                         <%= form.select(:role, Contact.roles.keys.map {|role| [role.titleize,role]},{}, { :class => 'selectpicker btn-outline-info col-md-12' }  )%>

                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Email address</label>
                          <%= form.email_field :email, id: :contact_email, class: 'form-control text-light'  %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Fist Name</label>
                          <%= form.text_field :name, id: :contact_name, class: 'form-control text-light', required: true %>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Phone</label>
                          <%= form.text_field :phone, id: :contact_phone, class: 'form-control rounded-0 text-light' %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">

                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Adress</label>
                           <input type="text" name="contact[address]" class="form-control text-light">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">County</label>
                          <input type="text" name="contact[county]" class="form-control text-light">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Postal Code</label>
                           <%= form.text_field :postal_code, id: :contact_postal_code, class: 'form-control text-light' %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>Contact Notes</label>
                          <div class="form-group">
                            <label class="bmd-label-floating text-light"> </label>
                            <%= form.text_area :notes, id: :contact_notes, class: 'form-control text-light', row: '5', placeholder: 'Enter important notes for this contact.' %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <button type="submit" class="btn bg-hudson pull-right">Update Profile</button>
                    <div class="clearfix"></div>
                  <% end %>
                </div>
              </div>
              <div class="card card-5  text-right">
                <div class="card-header card-header-icon ">
                  <div class="card-icon bg-hudson ">
                    <i class="material-icons">perm_identity</i>
                  </div>
                  <h4 class="card-title text-light text-left">Contact / Facts

                  </h4>
                </div>

                <div class="card-body">


               <div class="panel panel-default">
                 <div class="panel-heading">
                 </div>
                  <div class="panel-body col-md-12">
                    <span class="pull-left"></span><i style="color:green" class="fa fa-check-square"></i> Yes, Contact has beeen verified.
                    <ul class="">
                      <li class="list-group-item text-muted text-left" contenteditable="false">Profile</li>

                      <li class="profile-list "><span class="pull-left"><strong class="">Created</strong></span> <span class="float-right"> <%= @contact.created_at %></span></li>
                      <li class=" profile-list"><span class="pull-left"><strong class="">Last contacted</strong></span> <span class="float-right"> <%= @contact.created_at %></span></li>
                      <li class=" profile-list"><span class="pull-left"><strong class="">Real name</strong></span><span class="float-right"><%= @contact.name %></span></li>
                      <li class="profile-list "><span class="pull-left"><strong class="">Email: </strong></span><span class="float-right"><%= @contact.email %></span></li>
                      <li class="profile-list "><span class="pull-left"><strong class="">Company: </strong></span><span class="float-right"><%= @contact.company %></span></li>
                      <li class=" profile-list"><span class="pull-left"><strong class="">Address: </strong></span><span class="float-right"><%= @contact.address %></span></li>
                      <li class="profile-list"><span class="pull-left"><strong class="">Street Number: </strong></span><span class="float-right"><%= @contact.street_num %></span></li>
                      <li class="profile-list"><span class="pull-left"><strong class="">Street Name: </strong></span><span class="float-right"><%= @contact.strret_name %></span></li>
                      <li class="profile-list "><span class="pull-left"><strong class="">Phone: </strong></span><span class="float-right"><%= @contact.phone %></span></li>
                      <li class="profile-list "><span class="pull-left"><strong class="">County: </strong></span><span class="float-right"><%= @contact.county %></span></li>
                      <li class="profile-list"><span class="pull-left"><strong class="">Country: </strong></span><span class="float-right"><%= @contact.country %></span></li>
                      <li class=" profile-list"><span class="pull-left"><strong class="">Postal_code: </strong></span><span class="float-right"><%= @contact.postal_code %></span></li>
                      <li class="profile-list "><span class="pull-left"><strong class="">City: </strong></span><span class="float-right"><%= @contact.city %></span></li>
                      <li class="profile-list"><span class="pull-left"><strong class="">Email: </strong></span><span class="float-right"><%= @contact.email %></span></li>
                  </ul>
                </div>
              </div>
            </div>
           </div>
            </div>
            <div class="col-md-4">
              <div class="card card-profile card-5">
                <div class="card-avatar">
                  <a href="">
                    <%= image_tag @contact.avatar.present? ? @contact.avatar.url(:thumb) : gravatar_url(@contact.email), class: "media-object" %>
                  </a>
                </div>
                <div class="card-body">
                  <h6 class="card-category text-gray"> <%= @contact.company %></h6>
                  <h4 class="card-title"><%= @contact.name %></h4>
                  <p class="card-description">
                    <%= @contact.address %>
                  </p>
                  <a href="#pablo" class="btn bg-hudson btn-round">Add Contact</a>
                </div>
              </div>
              <div class="list-group">
            <a href="#" class="list-group-item bg-hudson">
              </a>

          </div>

