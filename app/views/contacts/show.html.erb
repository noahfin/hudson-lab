            <li class="profile-list "><span class="pull-left"><strong class="">Total Number Of Employees</strong></span> <span class="float-right"> <%= @contact.total_number_of_employees  if  @contact.total_number_of_employees  %></span></li>
            <li class="profile-list "><span class="pull-left"><strong class="">Sic</strong></span> <span class="float-right"> <%= @contact.sic  if  @contact.sic  %></span></li>
