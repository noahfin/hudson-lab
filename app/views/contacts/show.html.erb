            <li class="profile-list "><span class="pull-left"><strong class="">Latitude</strong></span> <span class="float-right"> <%= @contact.latitude  if  @contact.latitude  %></span></li>
            <li class="profile-list "><span class="pull-left"><strong class="">Longitude</strong></span> <span class="float-right"> <%= @contact.longitude  if  @contact.longitude  %></span></li>
            <li class="profile-list "><span class="pull-left"><strong class="">Type</strong></span> <span class="float-right"> <%= @contact.type  if  @contact.type  %></span></li>
