
   <%= render 'show_form' %>

<div class="card-body  first-show-card" >
   <div class="panel panel-default first-show-card">
      <div class="panel-heading mb-0 pl-4 pb-0">
          <h4 class="card-title text-light main-size-text pl-4 ml-4"><span class="r-r head-underline">Contact / Profile </span>
      </div>
