<style>
   .intro-2 {
   margin: auto;
   width: 42%;
   }
   .mainlogin {
   margin-top: 15%;
   }
   .card-creds-form { margin-top: 15% !important; margin: auto !important; }
   h6 {
   line-height: 1.7;
   }
   .card-reg { z-index: 99999999; }
   .lable-remember {
      position: relative;
      top: -1.1rem;
      left: 1.1rem;
   }
      @media screen and (min-width: 1600px) {
  .mainlogin {
    margin-top: 13%;
  }
}
</style>
<body class="presentation-page ">
   <nav class="navbar navbar-color-on-scroll navbar-transparent    fixed-top  navbar-expand-lg " color-on-scroll="100" id="sectionsNav">
      <div class="container">
         <div class="navbar-translate">
            <a class="navbar-brand text-white" href="/">Hudson Commercial Lab  </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            </button>
         </div>
         <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
               <li class="dropdown nav-item">
                  <div class="collapse navbar-collapse justify-content-end" id="navbar">
                     <ul class="navbar-nav text-white">
                        <li class="nav-item ">
                           <a href="/" class="nav-link">
                           <i class="material-icons">dashboard</i> Dashboard
                           </a>
                        </li>
                        <li class="nav-item active">
                           <%= link_to "<i class='material-icons'>person_add</i> Register".html_safe, new_user_registration_path, class: 'nav-link' %>
                        </li>
                        <li class="nav-item ">
                           <%= link_to "<i class='material-icons'>fingerprint</i> Login".html_safe, new_user_session_path, class: 'nav-link' %>
                        </li>
                        <li>
                           <%= link_to "<i class='material-icons'>lock_open</i>Locked".html_safe,  new_user_password_path, class: 'nav-link' %>
                        </li>
                     </ul>
                  </div>
            </ul>
         </div>
      </div>
   </nav>
   <div class="page-header mdl-color--grey-900">

      <section class=" ml-auto mr-auto">
         <div class="mb-2 mt-2 p-2 mr-auto ml-auto">
            <p class="notice  bg-footer text-danger mt-3 mb-3 ml-3 p-2"><%= notice %></p>
            <p class="alert  bg-footer text-danger mt-3 mb-3 ml-3 p-2"><%= alert %></p>
         <div class=" ml-auto mr-auto">
         </div>

            <div class="mask ml-auto mr-auto ">
               <div class="ml-auto mr-auto">

                  <div class="mainlogin" >

                     <div class=" cool-form ml-auto mr-auto bg-footer  p-4">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: '') do |f| %>
                        <h2 class="text-center">Log in</h2>
                          <% if resource.errors.any? %>
                            <div id="error_explanation">
                              <h2><%= pluralize(resource.errors.count, "error") %> prohibited successfull login:</h2>

                              <ul>
                              <% resource.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                              <% end %>
                              </ul>
                            </div>
                          <% end %>
                                                <div class="form-group mr-auto ml-auto">
                           <label class="lb-responsive">Enter Email</label> <br class="br-responsive">
                           <%= f.email_field :email, class: "dark-form-control pl-2 text-light", required: true, placeholder: 'Email'  %>
                        </div>
                        <div class="form-group">
                           <label class="lb-responsive">Enter Password</label> <br class="br-responsive">
                           <%= f.password_field :password, class: "dark-form-control  pl-2 text-light", required: true, placeholder: 'Password'  %>
                        </div>
                        <div class="form-group">
                           <button type="submit" class="btn btn-outline-info btn-block">Log in</button>
                        </div>
                        <div class="clearfix">
                     <label class="pull-left checkbox-inline">  <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, class: "lable-remember" %>
                      </div>
                    <% end -%></label>
                           <a href="#" class="pull-right text-muted">Forgot Password?</a>
                           <div class="col-md-12">
                           </div>
                           <div class="clearfix mt-4 ">
                              <div class="col-md-12 mt-4 mb-4 ">
                                 <%= link_to "Create an Account".html_safe, new_user_registration_path, class: 'text-muted float-left text-left pt-3 pl-1' %>
                              </div>
                           </div>
                        </div>
                        <% end %>



                     </div>
                  </div>
               </div>
            </div>
         </div>
   </div>
   </section>
   </div>
</body>
